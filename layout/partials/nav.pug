- var darkModeIcon = "data:image/svg+xml;base64,"
.menubar
  a(href=url_for('/')).title
    h2= config.title
  .menu-container
    img(src=darkModeIcon,style="opacity: 0;").theme-icon#theme-switch
    i.fas.fa-bars#bar
    ul.menu
        each url, label in theme.menu
          li
            a(href=url)= label