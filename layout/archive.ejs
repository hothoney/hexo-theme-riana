<section class="section">
  <% const groups = {};
    const years = [];
    page.posts.each(post => {
        const year = post.date.year();
        if (typeof(groups[year]) === 'undefined') {
            groups[year] = [];
            years.push(year);
        }
        groups[year].push(post);
    });
    years.sort((a, b) => b - a); %>
  <% for (let year of years) { %>
  <h4 class="year" id="<%= year %>"><%= year %></h4>
  <ul class="articles">
    <% for (let post of groups[year].sort((a, b) => b.date.diff(a.date))) { %>
    <li class="article>">
      <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished">
        <%if(post.date.date() < 10) { %>
        <%= post.date.month() + 1 %>月<%= '0' + post.date.date() %>日
        <% } else { %>
        <%= post.date.month() + 1 %>月<%= post.date.date() %>日
        <% } %>
      </time>
      <a href="<%= url_for(post.link ? post.link : post.path) %>">
        <%= post.title %>
      </a>
    </li>
    <% } %>
  </ul>
  <% } %>
</section>
<%- partial('partials/paginator') %>